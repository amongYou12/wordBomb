local dragging, dragInput, dragStart, startPos
TopBar.InputBegan:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then dragging = true; dragStart = input.Position; startPos = MainFrame.Position; input.Changed:Connect(function() if input.UserInputState == Enum.UserInputState.End then dragging = false end end) end end)
UserInputService.InputChanged:Connect(function(input) if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then local delta = input.Position - dragStart; MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y) end end)

--------------------------------------------------------------------------------
-- 4. LOGIC ENGINE
--------------------------------------------------------------------------------
local isTyping = false 
local isFlexMode = false
local isShortMode = false
local isFirstMode = false
local isLockInMode = false

local function SanitizeWord(str)
    if not str then return "" end
    return str:gsub("[^a-zA-Z0-9%-]", "")
end

local function GetRandomTime(timeTable)
    local minVal = timeTable[1]; local maxVal = timeTable[2]
    local minInt = math.floor(minVal * 10000); local maxInt = math.floor(maxVal * 10000)
    local val = math.random(minInt, maxInt) / 10000
    if isLockInMode then val = val - LOCK_IN_SPEED_BOOST end
    if isFlexMode then val = val - FLEX_SETTINGS.SpeedBoost end
    if val < 0.005 then val = 0.005 end
    return val
end

local function IDA_autoType(rawWord, inputLength)
    local word = SanitizeWord(rawWord)
    if not word or word == "" or isTyping then return end
    isTyping = true
    
    local activeTypoChance = TYPING_SETTINGS.TypoChance
    local activeHesitationChance = TYPING_SETTINGS.HesitationChance
    if isFlexMode then
        activeTypoChance = activeTypoChance + FLEX_SETTINGS.AddedTypoChance
        activeHesitationChance = activeHesitationChance + FLEX_SETTINGS.AddedHesitation
    end

    local vim = game:GetService("VirtualInputManager")
    local function press(key)
        pcall(function()
            vim:SendKeyEvent(true, key, false, game)
            task.wait(0.015) 
            vim:SendKeyEvent(false, key, false, game)
        end)
    end

    -- Skip rule: Skip what user put in bar, OR skip 1st letter if bar is empty.
    local startAt = math.max(2, inputLength + 1)

    for i = startAt, #word do
        if #word > 7 and i == (startAt + 3) and math.random() < activeTypoChance then
            task.wait(GetRandomTime(TYPING_SETTINGS.BaseSpeed)) 
            press(Enum.KeyCode.Q); task.wait(GetRandomTime(TYPING_SETTINGS.BaseSpeed)) 
            press(Enum.KeyCode.Backspace); task.wait(GetRandomTime(TYPING_SETTINGS.BackspaceSpeed))
        end
        local char = word:sub(i, i):upper()
        local code = Enum.KeyCode[char] or (char == " " and Enum.KeyCode.Space)
        if char == "-" then code = Enum.KeyCode.Minus end
        if code then press(code) end
        local delay = (i <= (startAt + 3)) and GetRandomTime(TYPING_SETTINGS.StartSlowDelay) or GetRandomTime(TYPING_SETTINGS.BaseSpeed)
        if math.random() < activeHesitationChance then delay = delay + GetRandomTime(TYPING_SETTINGS.HesitationDelay) end
        task.wait(delay)
    end

    task.wait(math.max(0.1, GetRandomTime(TYPING_SETTINGS.SubmitDelay)))
    vim:SendKeyEvent(true, Enum.KeyCode.Return, false, game); task.wait(0.1); vim:SendKeyEvent(false, Enum.KeyCode.Return, false, game)
    isTyping = false
    WordText.Text = "Waiting..."; WordText.TextColor3 = Color3.fromRGB(150, 150, 150)
end

local function IDA_PerformSearch()
    if isTyping then return end
    local input = SanitizeWord(LetterBox.Text):lower()
    if input == "" and isFirstMode then return end
    
    WordText.Text = "Searching..."; WordText.TextColor3 = Color3.fromRGB(255, 255, 0)
    
    local found = nil
    local function MatchesCriteria(w)
        if isFirstMode then return w:lower():sub(1, #input) == input
        else return w:lower():find(input, 1, true) end
    end

    if isFlexMode then
        local bestWord = ""
        for _, v in ipairs(ALL_WORDS) do
            if MatchesCriteria(v) then
                local cleanV = SanitizeWord(v)
                if not CheckHistory(cleanV) then if #cleanV > #bestWord then bestWord = cleanV end end
            end
        end
        if bestWord ~= "" then found = bestWord end
    elseif isShortMode then
        local bestWord = nil; local minLen = 999
        for _, v in ipairs(ALL_WORDS) do
            if MatchesCriteria(v) then
                local cleanV = SanitizeWord(v)
                if not CheckHistory(cleanV) then if #cleanV < minLen then bestWord = cleanV; minLen = #cleanV end end
            end
        end
        if bestWord then found = bestWord end
    else
        for _, v in ipairs(ALL_WORDS) do
            if MatchesCriteria(v) then
                local cleanV = SanitizeWord(v)
                if not CheckHistory(cleanV) then found = cleanV; break end
            end
        end
    end

    if found then
        WordText.Text = "Typing: " .. found; WordText.TextColor3 = Color3.fromRGB(0, 200, 255)
        AddToHistory(found)
        IDA_autoType(found, #input)
    else
        WordText.Text = "No Word Found"; WordText.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end

--------------------------------------------------------------------------------
-- 5. CONNECTIONS
--------------------------------------------------------------------------------
LetterBox.FocusLost:Connect(function(e) if e then IDA_PerformSearch() end end)
RerunButton.MouseButton1Click:Connect(IDA_PerformSearch)
ResetButton.MouseButton1Click:Connect(function() if isTyping then return end ClearHistory(); WordText.Text = "History Cleared"; task.wait(1); WordText.Text = "Loaded " .. #ALL_WORDS .. " Words" end)
local function UpdateVisuals()
    FirstButton.Text = isFirstMode and "First: ON" or "First: OFF"; FirstButton.TextColor3 = isFirstMode and Color3.fromRGB(230, 126, 34) or Color3.fromRGB(150, 150, 150)
    FlexButton.Text = isFlexMode and "Flex: ON" or "Flex: OFF"; FlexButton.TextColor3 = isFlexMode and Color3.fromRGB(46, 204, 113) or Color3.fromRGB(150, 150, 150)
    ShortButton.Text = isShortMode and "Short: ON" or "Short: OFF"; ShortButton.TextColor3 = isShortMode and Color3.fromRGB(241, 196, 15) or Color3.fromRGB(150, 150, 150)
    LockInButton.Text = isLockInMode and "Lock: ON" or "Lock: OFF"; LockInButton.TextColor3 = isLockInMode and Color3.fromRGB(52, 152, 219) or Color3.fromRGB(150, 150, 150)
end
FirstButton.MouseButton1Click:Connect(function() isFirstMode = not isFirstMode; UpdateVisuals() end)
FlexButton.MouseButton1Click:Connect(function() isFlexMode = not isFlexMode; if isFlexMode then isShortMode = false end; UpdateVisuals() end)
ShortButton.MouseButton1Click:Connect(function() isShortMode = not isShortMode; if isShortMode then isFlexMode = false end; UpdateVisuals() end)
LockInButton.MouseButton1Click:Connect(function() isLockInMode = not isLockInMode; UpdateVisuals() end)
MinimizeButton.MouseButton1Click:Connect(function() MainFrame.Visible = not MainFrame.Visible; MinimizeButton.Text = MainFrame.Visible and "-" or "+" end)
