--------------------------------------------------------------------------------
-- 4. ENGINE (FIXED SEARCH LOGIC)
--------------------------------------------------------------------------------
task.spawn(function()
    local count = 0
    for _, url in ipairs(DictionaryURLs) do
        local s, content = pcall(function() return game:HttpGet(url) end)
        if s then
            local chunk = 0
            for line in content:gmatch("[^\r\n]+") do
                table.insert(ALL_WORDS, line)
                count = count + 1
                chunk = chunk + 1
                if chunk >= 10000 then chunk = 0; task.wait() end
            end
        end
    end
    WordStatus.Text = "Loaded " .. count .. " Words"
end)

local function TypeWord(word)
    isTyping = true
    task.wait(GetRandomTime(TYPING_SETTINGS.StartSlowDelay)) -- Initial hesitation

    for i = 1, #word do
        local char = word:sub(i,i):upper()
        local code = Enum.KeyCode[char] or (char == "-" and Enum.KeyCode.Minus)
        
        if code then
            vim:SendKeyEvent(true, code, false, game)
            task.wait(0.01)
            vim:SendKeyEvent(false, code, false, game)
        end
        
        local delay = GetRandomTime(TYPING_SETTINGS.BaseSpeed)
        if i <= 3 then delay = GetRandomTime(TYPING_SETTINGS.StartSlowDelay) end
        if math.random() > 0.85 and not isLockIn then delay = delay + GetRandomTime(TYPING_SETTINGS.HesitationDelay) end
        
        task.wait(delay)
    end
    
    task.wait(GetRandomTime(TYPING_SETTINGS.SubmitDelay))
    vim:SendKeyEvent(true, Enum.KeyCode.Return, false, game)
    task.wait(0.05)
    vim:SendKeyEvent(false, Enum.KeyCode.Return, false, game)
    isTyping = false
end

--[[ REWRITTEN SEARCH ENGINE ]]--
local function DoSearch()
    if isTyping then return end
    local query = Sanitize(Input.Text):lower()
    if query == "" then return end
    
    WordStatus.Text = "Searching..."
    
    -- Get Modes
    local isFirstMode = FirstB.Text:find("ON") -- Starts With
    local isShortMode = ShortB.Text:find("ON") -- Shortest
    local isFlexMode  = FlexB.Text:find("ON")  -- Longest (Flex)
    
    task.spawn(function()
        local found = nil
        local yieldCounter = 0
        local bestLen = isShortMode and 999 or 0 -- Initialize logic vars
        
        for _, v in ipairs(ALL_WORDS) do
            yieldCounter = yieldCounter + 1
            if yieldCounter % 4000 == 0 then task.wait() end -- Anti-freeze
            
            local w = Sanitize(v)
            local wLow = w:lower()
            
            -- 1. LENGTH CHECK
            if #w >= MIN_LETTER_COUNT then
                
                -- 2. MATCHING LOGIC (FIRST vs NORMAL)
                local match = false
                if isFirstMode then
                    -- "First" means word MUST start with input (for Last Letter)
                    if wLow:sub(1, #query) == query then match = true end
                else
                    -- Normal means word just CONTAINS input
                    if wLow:find(query, 1, true) then match = true end
                end
                
                -- 3. SELECTION LOGIC (FLEX/SHORT vs INSTANT)
                if match and not CheckHist(w) and not IsBlacklisted(w) then
                    if isShortMode then
                        -- Keep searching for shorter words
                        if #w < bestLen then
                            bestLen = #w
                            found = w
                        end
                    elseif isFlexMode then
                        -- Keep searching for longer words
                        if #w > bestLen then
                            bestLen = #w
                            found = w
                        end
                    else
                        -- Standard Mode: Stop at the very first match found
                        found = w
                        break
                    end
                end
            end
        end
        
        if found then
            lastFound = found
            WordStatus.Text = "Found: " .. found
            WordStatus.TextColor3 = Color3.fromRGB(0, 200, 255)
            AddHist(found)
            task.wait(0.1) 
            TypeWord(found)
        else
            WordStatus.Text = "No word found!"
            WordStatus.TextColor3 = Color3.fromRGB(255, 100, 100)
        end
    end)
end

